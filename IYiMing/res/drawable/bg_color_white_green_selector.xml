<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#cc9BD34B"
                android:endColor="#cc9BD34B"
                android:angle="270" />
            <stroke
                android:width="0px"
                android:color="#ccd2d2d2" />
            <corners
                android:radius="0dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#cc9BD34B"
                android:endColor="#cc9BD34B"
                android:angle="270" />
            <stroke
                android:width="0px"
                android:color="#ccd2d2d2" />
            <corners
                android:radius="0dp" />
        </shape>
    </item>

    <item>       
        <shape>
            <gradient
                android:startColor="#ccefefef"
                android:endColor="#ccefefef"
                android:angle="270" />
            <stroke
                android:width="0px"
                android:color="#ccd2d2d2" />
            <corners
                android:radius="0dp" />
        </shape>
    </item>
</selector>