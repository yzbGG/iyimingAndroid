<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:drawable="@color/no_color" android:state_window_focused="false"/>
    <item android:drawable="@drawable/dark_drawable" android:state_focused="true" android:state_pressed="true"/>
    <!-- 触摸模式下单击时的背景颜色 -->
    <item android:drawable="@drawable/dark_drawable" android:state_focused="false" android:state_pressed="true"/>
    <!-- 选中时的背景颜色 -->
    <item android:drawable="@drawable/dark_drawable" android:state_selected="true"/>
    <!-- 获得焦点时的背景  颜色 -->
    <item android:drawable="@drawable/dark_drawable" android:state_focused="true"/>

</selector>