<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_overlay"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_common"
        android:orientation="vertical"
        android:padding="@dimen/view_interval_space_20" >

        <TextView
            android:id="@+id/tv_pop_select_head_icon_camera"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_interval_space_20"
            android:background="@drawable/bg_bound_corner_selector"
            android:gravity="center_horizontal"
            android:padding="@dimen/view_interval_space_15"
            android:text="相机"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" >
        </TextView>

        
        <TextView
            android:id="@+id/tv_pop_select_head_icon_select"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_interval_space_20"
            android:background="@drawable/bg_bound_corner_selector"
            android:gravity="center_horizontal"
            android:padding="@dimen/view_interval_space_15"
            android:text="图库"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/tv_pop_select_head_icon_cancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/view_interval_space_20"
            android:layout_marginTop="@dimen/view_interval_space_20"
            android:background="@drawable/bg_bound_corner_selector"
            android:gravity="center_horizontal"
            android:padding="@dimen/view_interval_space_15"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>

</RelativeLayout>
