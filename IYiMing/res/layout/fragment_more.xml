<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:background="#ffffff"
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="45dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_ziliao"
                android:layout_width="17dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_about" />

            <TextView
                android:id="@+id/ziliao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_ziliao"
                android:textColor="#323232"
                android:text="关于我们"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="17dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:src="@drawable/ic_right_tag" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#efefef" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/service"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:clickable="true"
            android:background="#ffffff"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_bianji"
                android:layout_width="17dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_service" />

            <TextView
                android:id="@+id/bianji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_bianji"
                android:textColor="#323232"
                android:text="服务中心"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="17dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:src="@drawable/ic_right_tag" />
        </RelativeLayout>
        
                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#efefef" >
        </LinearLayout>
        
        <RelativeLayout
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:clickable="true"
            android:background="#ffffff"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_bianji"
                android:layout_width="17dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_contact" />

            <TextView
                android:id="@+id/bianji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_bianji"
                android:textColor="#323232"
                android:text="联系我们"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="17dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:src="@drawable/ic_right_tag" />
        </RelativeLayout>
        
                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#efefef" >
        </LinearLayout>
        
        <RelativeLayout
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:clickable="true"
            android:background="#ffffff"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_bianji"
                android:layout_width="17dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_version" />

            <TextView
                android:id="@+id/bianji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_bianji"
                android:textColor="#323232"
                android:text="版本中心"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="17dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:src="@drawable/ic_right_tag" />

            <TextView
                android:id="@+id/newVersionTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/bianji"
                android:background="@drawable/corners_bg_red_selector"
                android:text="新版本"
                android:textSize="12sp"
                android:textColor="#ffffff" />

        </RelativeLayout>
    </LinearLayout>
    
    

</RelativeLayout>