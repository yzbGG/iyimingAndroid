<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.iyiming.mobile.view.widget.NavBar
        android:id="@+id/navBar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </com.iyiming.mobile.view.widget.NavBar>
    
    
    
    <LinearLayout
        android:background="#ffffff"
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/navBar1"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:id="@+id/tabCountry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textcountry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                android:text="国家" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:src="@drawable/ic_tag_down" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="24dp"
            android:background="#c3c3c3" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/tabMoney"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:ellipsize="end"
                 android:textSize="16sp"
                 android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                android:text="金额" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:src="@drawable/ic_tag_down" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="24dp"
            android:background="#c3c3c3" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/tabTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                 android:textSize="16sp"
                 android:singleLine="true"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                android:text="发布日期" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:src="@drawable/ic_tag_down" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentLeft="true"
        android:background="#c1c0c5"
        android:layout_below="@+id/linearLayout1"
        android:orientation="vertical" >
    </LinearLayout>
    
           <com.iyiming.mobile.view.widget.XListView
               android:id="@+id/xlistview_home"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_below="@+id/line"
               android:cacheColorHint="#00000000"
               android:divider="@color/transparent"
               android:listSelector="@color/transparent" />

    

</RelativeLayout>