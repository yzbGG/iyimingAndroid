<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/corners_bg_selector" >
    
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="10dp"
        android:text="检测到新版本"
        android:textColor="#444444"
        android:textSize="16sp" />
    
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/whats_new">

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/whats_new"
            android:layout_weight="1"
            android:background="@drawable/corners_btn_left_selector"
            android:gravity="center"
            android:text="下次再说"
            android:textColor="@drawable/selector_textview_textcolor" />

        <Button
            android:id="@+id/certain"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_below="@+id/whats_new"
            android:layout_weight="1"
            android:background="@drawable/corners_btn_right_selector"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="@drawable/selector_textview_textcolor" />

    </LinearLayout>
    
    <ImageView
        android:id="@+id/blueline"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/date"
        android:background="#55000000" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/whats_new"
        android:layout_alignTop="@+id/blueline"
        android:layout_marginTop="8dp"
        android:textColor="#222222"
        android:textSize="14sp"
        android:text="新版本" />

    <TextView
        android:id="@+id/whats_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="全新UI界面，项目资源多多，给你最优质的信息！快来体验吧！"
        android:textColor="#444444"
        android:textSize="13sp" />

</RelativeLayout>
